@using Vidly.ViewModels
@model List<MovieGenreVM>
@{
    ViewBag.Title = "Movie Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

@Html.ActionLink("Add Movie", "New", "Movies", new { @class = "btn btn-success" })
<br /><br />

@if (Model.Count == 0)
{
    <p>No movies here.</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <td>Movie</td>
                <td>Genre</td>
                <td>Action</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@Html.ActionLink(@movie.MovieName, "Detail", "Movies", new { movieId = movie.MovieID }, null)</td>
                    <td>@movie.Genre.GenreName</td>
                    <td>@Html.ActionLink("Edit", "Edit", "Movies", new { movieId = movie.MovieID }, null)</td>
                </tr>
            }
        </tbody>
    </table>
}
