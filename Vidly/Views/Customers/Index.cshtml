@using Vidly.ViewModels
@model List<CustomerMembershipVM>

@{
    ViewBag.Title = "Customer Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

@Html.ActionLink("Add Customer","New","Customers", new { @class="btn btn-success" })
<br /><br />

@if (Model.Count == 0)
{
    <p>No customers here.</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Customer</th>
                <th>Membership Type</th>
                <th>Discount Rate</th>
                <th>Action</th>
            </tr></thead>        
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@Html.ActionLink(customer.CustomerName,"Detail","Customers", new { id = customer.CustomerID }, null)</td>
                    <td>@customer.MembershipType.MembershipTypeName</td>
                    <td>@customer.MembershipType.DiscountRate%</td>
                    <td>@Html.ActionLink("Edit", "Edit", "Customers", new { id = customer.CustomerID }, null)</td>
                </tr>
            }
        </tbody>
    </table>

}


