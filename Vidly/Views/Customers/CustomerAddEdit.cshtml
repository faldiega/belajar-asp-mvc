@model Vidly.ViewModels.CustomerAddEditVM
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.HeaderText</h2>

@using (Html.BeginForm("Save", "Customers"))
{
    @Html.HiddenFor(m => m.Customer.CustomerID)
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.CustomerName)
        @Html.TextBoxFor(m => m.Customer.CustomerName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @*@Html.LabelFor(m => m.BirthDate)*@ @* Custom text nya pake data annotation.*@
        @Html.Label("BirthDate", "Birth of Date")
        @Html.TextBoxFor(m => m.Customer.BirthDate, "{0: dd/MM/yyyy}", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("MembershipTypeID", "Membership Type")
        @Html.DropDownListFor(m => m.Customer.MembershipTypeID, new SelectList(Model.MembershipType, "MembershipTypeID", "MembershipTypeName"), "-- Select Membership Type --", new { @class = "form-control" })
    </div>
    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(m => m.Customer.IsSubscribedToNewsletter) Subscribed to Newsletter?
        </label>
    </div>
    <button id="btnSubmit" type="submit" class="btn btn-primary">@ViewBag.ButtonText</button>
}